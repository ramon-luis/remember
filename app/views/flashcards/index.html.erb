

<div class="table-responsive table-hover">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Flashcards</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @flashcards.each do |flashcard| %>
        <tr>
          <td>
            <%= link_to flashcard.cardfront[0..165]+' ...', flashcard_path(flashcard), class: 'text-dark' %>
          </td>
          <td>
            <%= link_to 'Edit', edit_flashcard_path(flashcard), class: 'text-secondary small font-weight-light' %>
          </td>
          <td>
            <%= link_to 'Delete', flashcard_path(flashcard), method: :delete, data: {confirm: 'Are you sure?' }, class: 'text-danger small font-weight-light' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
