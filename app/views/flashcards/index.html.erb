<p>
  <h3 class="text-info">Flashcards</h3>
</p>

<div class="table-responsive table-hover">
  <table class="table">

    <tbody>
      <% @flashcards.each do |flashcard| %>
        <tr>
          <td>
            <%= link_to flashcard.cardfront[0..165]+' ...', flashcard_path(flashcard), class: 'text-dark' %>
          </td>
          <td>
            <%= link_to 'Edit', edit_flashcard_path(flashcard), class: 'small font-weight-light
            text-secondary' %>
          </td>
          <td>
            <%= link_to 'Delete', "/flashcards/#{flashcard.id}/delete", class: 'small font-weight-light
            text-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
