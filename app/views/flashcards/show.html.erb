<% if @display_mode == 'cardfront' %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <p class="card-text"><%= @flashcard.cardfront %></p>
      <%= link_to 'Flip to Back', {controller: :flashcards, action: :show, display_mode: 'cardback'}, class: 'btn btn-primary' %>
      <%= link_to 'Edit Card', edit_flashcard_path(@flashcard), class: 'btn btn-primary' %>
    </div>
  </div>

<% else %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <p class="card-text"><%= @flashcard.cardidea %></p>
      <p class="card-text"><pre><%= simple_format @flashcard.cardcode %></pre></p>
      <%= link_to 'Flip to Front', {controller: :flashcards, action: :show, display_mode: 'cardfront'}, class: 'btn btn-primary' %>
      <%= link_to 'Edit Card', edit_flashcard_path(@flashcard), class: 'btn btn-primary' %>
      <%= link_to 'Delete Card', flashcard_path(@flashcard), method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-primary' %>

    </div>
  </div>

<% end %>
